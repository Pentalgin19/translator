<Window x:Class="Translator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Translator"
        mc:Ignorable="d"
        Title="Переводчик" Height="300" Width="1000" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Width="330" HorizontalAlignment="Left" Background="LightBlue">

            <TextBlock Text ="Введите текст" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top" 
                       Margin="0, 40, 0, 0"/>
            <TextBlock x:Name="textBlock" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top" 
                       Margin="0, 70, 0, 0"/>
            <TextBox x:Name="textBox1" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Top" 
                     Margin="0, 110, 0, 0" 
                     Width="200" Height="80" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     PreviewMouseLeftButtonUp="textBox1_PreviewMouseLeftButtonUp"/>
            <Button  x:Name="btn" Click="onClick"
                     Content="Перевести"
                     Width="200" Height="25" 
                     Margin="0, 210, 0, 0" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Top"
                     IsDefault="True"/>
        </Grid>
        <Grid Width="670" Background="LightCoral" HorizontalAlignment="Right"/>
    </Grid>
</Window>
